{
  "name": "mastra-starter",
  "version": "0.1.0",
  "description": "Minimal Mastra TypeScript starter with multi-agent routing and MCP integration",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "pnpm run setup:dev && turbo run dev --parallel --filter=!@mastra-starter/cli",
    "dev:agent": "pnpm run setup:dev && pnpm --filter @mastra-starter/agent run dev",
    "dev:cli": "pnpm --filter @mastra-starter/cli run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup:dev": "mkdir -p data && pnpm install",
    "kill": "pkill -f 'tsx.*src/agent' || true"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.5",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=22.13.0",
    "pnpm": ">=9.0.0"
  }
}
